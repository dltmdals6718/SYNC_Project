PROCESS BEFORE OUTPUT.
  MODULE STATUS_0100.
  MODULE INIT_INOUT_ALV.
  MODULE INIT_SUB_SCREEN.
  CALL SUBSCREEN SEARCH_SUB
    INCLUDING SY-CPROG GV_CONDITION_DYNNR.
  CALL SUBSCREEN COMPANY_SUB
    INCLUDING SY-CPROG GV_COMPANY_DYNNR.

PROCESS AFTER INPUT.
  MODULE EXIT AT EXIT-COMMAND.
  MODULE USER_COMMAND_0100.
  CALL SUBSCREEN SEARCH_SUB.
  CALL SUBSCREEN COMPANY_SUB.
