*&---------------------------------------------------------------------*
*& Module GET_EMPLOYEE_DATA OUTPUT
*&---------------------------------------------------------------------*
*&
*&---------------------------------------------------------------------*
MODULE GET_EMPLOYEE_DATA OUTPUT.

  CLEAR ZSFC_FI_0060.

  SELECT SINGLE *
    FROM ZTFC_SDT040
    INTO CORRESPONDING FIELDS OF ZSFC_FI_0060
    WHERE PERNR = GS_HEADER_DATA-PERNR.

  SELECT SINGLE STRG TELF3
    FROM ZTFC_SDT050
    INTO CORRESPONDING FIELDS OF ZSFC_FI_0060
    WHERE BUKRS = ZSFC_FI_0060-BUKRS
      AND ORGEH = ZSFC_FI_0060-ORGEH.

  SELECT SINGLE BUTXT
    FROM ZTFC_SDT030
    INTO ZSFC_FI_0060-BUTXT
    WHERE BUKRS = ZSFC_FI_0060-BUKRS.



  IF SY-SUBRC <> 0.
    MESSAGE S121(ZFC_DUMPTRUCK) DISPLAY LIKE 'W'.
    LEAVE TO SCREEN 0.
  ENDIF.

ENDMODULE.
