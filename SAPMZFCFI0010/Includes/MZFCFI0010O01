*&---------------------------------------------------------------------*
*& Module GET_SUPPLIER_DATA OUTPUT
*&---------------------------------------------------------------------*
*&
*&---------------------------------------------------------------------*
MODULE GET_SUPPLIER_DATA OUTPUT.

  CLEAR ZTFC_MMT020.

  SELECT SINGLE *
    FROM ZTFC_MMT020
    INTO CORRESPONDING FIELDS OF ZTFC_MMT020
    WHERE LIFNR = GS_ITEM_DATA-LIFNR.

  IF SY-SUBRC <> 0.
    MESSAGE S123(ZFC_DUMPTRUCK) DISPLAY LIKE 'W'.
    LEAVE TO SCREEN 0.
  ENDIF.

ENDMODULE.
