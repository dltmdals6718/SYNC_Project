TYPES: BEGIN OF TS_BALANCE.
         INCLUDE TYPE ZTFC_FIT040.
TYPES:   MON_TXT TYPE STRING.
TYPES: END OF TS_BALANCE.


TABLES:
  ZSFC_FI_0100. " 전표 헤더 정보

DATA: OK_CODE TYPE SY-UCOMM.

DATA: GV_YEAR TYPE ZTFC_FIT020-GJAHR.

* ALV TREE
DATA: GO_ALV_TREE           TYPE REF TO CL_GUI_SIMPLE_TREE,
      GO_TREE_CONTAINER     TYPE REF TO CL_GUI_CUSTOM_CONTAINER,
      GO_NODE_EVENT_HANDLER TYPE REF TO LCL_NODE_EVENT_HANDLER.

DATA: GT_NODE LIKE TABLE OF MTREESNODE WITH DEFAULT KEY,
      GS_NODE LIKE MTREESNODE.

* GL 계정 누계액 및 잔액 ALV
DATA: GO_BALANCE_CONTAINER TYPE REF TO CL_GUI_CUSTOM_CONTAINER,
      GO_BALANCE_ALV_GRID  TYPE REF TO CL_GUI_ALV_GRID,
      GT_BALANCE_FCAT      TYPE LVC_T_FCAT,
      GS_BALANCE_LAYOUT    TYPE LVC_S_LAYO.

* 누계액 History ALV
DATA: GO_HISTORY_CONTAINER TYPE REF TO CL_GUI_CUSTOM_CONTAINER,
      GO_HISTORY_ALV_GRID  TYPE REF TO CL_GUI_ALV_GRID,
      GT_HISTORY_FCAT      TYPE LVC_T_FCAT,
      GS_HISTORY_LAYOUT    TYPE LVC_S_LAYO.

* 전표 상세보기 ALV - 아이템
DATA: GO_DOC_ITEM_CONTAINER TYPE REF TO CL_GUI_CUSTOM_CONTAINER,
      GO_DOC_ITEM_ALV_GRID  TYPE REF TO CL_GUI_ALV_GRID,
      GT_DOC_ITEM_FCAT      TYPE LVC_T_FCAT,
      GS_DOC_ITEM_LAYOUT    TYPE LVC_S_LAYO.

* 계정과목
DATA: GT_ACCOUNT TYPE TABLE OF ZTFC_FIT010,
      GS_ACCOUNT LIKE LINE OF GT_ACCOUNT.

* 누계액 OUTTAB
DATA: GT_DATA TYPE TABLE OF TS_BALANCE,
      GS_DATA LIKE LINE OF GT_DATA.

* 누계액 History
DATA: GT_HISTORY TYPE TABLE OF ZSFC_FI_0110,
      GS_HISTORY LIKE LINE OF GT_HISTORY.

* 전표 상세보기 - 아이템
DATA: GT_DOC_ITEM TYPE TABLE OF ZSFC_FI_0110,
      GS_DOC_ITEM LIKE LINE OF GT_DOC_ITEM.

* Chart
DATA: GO_CHART_CONTAINER TYPE REF TO CL_GUI_CUSTOM_CONTAINER,
      GO_CHART           TYPE REF TO CL_GUI_CHART_ENGINE.

DATA: GO_IXML          TYPE REF TO IF_IXML,
      GO_IXML_SF       TYPE REF TO IF_IXML_STREAM_FACTORY,
      GO_IXML_DATA_DOC TYPE REF TO IF_IXML_DOCUMENT,
      GO_OSTREAM       TYPE REF TO IF_IXML_OSTREAM,
      GO_ENCODING      TYPE REF TO IF_IXML_ENCODING.
